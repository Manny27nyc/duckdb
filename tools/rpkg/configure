#!/bin/sh

set -e
set -x

cd `dirname $0`

echo "R: configure"

if [ -z "${DUCKDB_R_DEBUG}" ]; then
  python3 rconfigure.py
else
  # Clean old object files if compiling with a different R version
  ${R_HOME}/bin/R --slave -f R/aaa-r-version.R

  cd ../..
  GEN=ninja CONFIGURE_R=1 nice ${MAKE:-make} debug
fi
